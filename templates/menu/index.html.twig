{% extends 'base.html.twig' %}

{% block title %}Menu index{% endblock %}

{% block body %}
    <h1>Menu index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Mencod</th>
                <th>Menlib</th>
                <th>Menord</th>
                <th>Mencom</th>
                <th>Mendat</th>
                <th>Menphp</th>
                <th>Mensql</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for menu in menus %}
            <tr>
                <td>{{ menu.id }}</td>
                <td>{{ menu.mencod }}</td>
                <td>{{ menu.menlib }}</td>
                <td>{{ menu.menord }}</td>
                <td>{{ menu.mencom }}</td>
                <td>{{ menu.mendat ? menu.mendat|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ menu.menphp }}</td>
                <td>{{ menu.mensql }}</td>
                <td>
                    <a href="{{ path('menu_show', {'id': menu.id}) }}">show</a>
                    <a href="{{ path('menu_edit', {'id': menu.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('menu_new') }}">Create new</a>
{% endblock %}
